rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.admin == true || 
              request.auth.token.email in ['admin@ecgkid.com', 'rajka@ecgkid.com', 'ecgkidportal@gmail.com']);
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Admin Users Collection (minimal - just for admin access control)
    match /admins/{userId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only manually set in Firebase Console
    }
    
    // Contact Messages (temporary storage for form submissions)
    match /contact-messages/{messageId} {
      // Anyone can create (submit contact form)
      allow create: if true;
      
      // Only admins can read/delete
      allow read, delete: if isAdmin();
      
      // No updates
      allow update: if false;
    }
    
    // Newsletter Subscribers (temporary storage)
    match /newsletter-subscribers/{subscriberId} {
      // Anyone can subscribe
      allow create: if true;
      
      // Only admins can read/manage
      allow read, delete: if isAdmin();
      
      // No updates
      allow update: if false;
    }
    
    // Block all other collections
    // All content (blog, videos) is now file-based
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
